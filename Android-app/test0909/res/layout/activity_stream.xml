<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFD0"
    android:layout_height="fill_parent"
    >
    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true" >
    </WebView>
    <ImageView
        android:id="@+id/rec"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|top"
        android:alpha="0"
        app:srcCompat="@drawable/reccircle" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgClose"
        android:layout_gravity="end|top"
        android:background="@drawable/close"
        android:padding="20dp"/>

    <ImageButton
        android:id="@+id/btn_takepic"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:alpha="1"
        android:background="@null"
        app:srcCompat="@drawable/camera"/>

    <ImageButton
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_gravity="center|start"
        android:background="@null"
        android:src="@drawable/ic_videocam_black_24dp"/>

    <ImageButton
        android:id="@+id/picfolder"
        android:layout_width="50dp"
        android:layout_height="110dp"
        android:layout_gravity="bottom|start"
        android:alpha="1"
        android:background="@null"
        app:srcCompat="@drawable/mailblack"/>

    <ImageView
        android:id="@+id/flash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:srcCompat="@raw/white"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_wifi_black_24dp"
        android:layout_gravity="top|left"
        />

    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="48dp"
        android:layout_height="110dp"
        android:layout_gravity="center|start"
        android:alpha="1"
        android:background="@null"
        android:textOff=""
        android:textOn=""
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/bluetooth"/>
</FrameLayout>
