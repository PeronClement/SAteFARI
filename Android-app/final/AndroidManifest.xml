            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name=".ListActivity"></action>
                        <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".ControllerActivity"
